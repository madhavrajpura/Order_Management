@model DataAccessLayer.ViewModels.PaginationViewModel<DataAccessLayer.ViewModels.ItemViewModel>

<input type="hidden" id="totalRecords" value="@Model.TotalCount" />

@foreach (var item in Model.Items)
{
    <div class="col-12 col-md-6 col-lg-4">
        <div class="card item-card border-0 shadow-sm p-3">
            <div class="card-body">
                <h5 class="card-title fw-bold text-dark">@item.ItemName</h5>
                <p class="card-text text-muted">Price: $@item.Price.ToString("F2")</p>
                <p class="card-text text-muted small">Added: @item.CreatedAt.ToString("MMM dd, yyyy")</p>
                <div class="d-flex gap-2 mt-3">
                    <button class="btn btn-sm btn-primary placeOrder" data-bs-toggle="modal" data-bs-target="#SaveOrderModal" data-item-id="@item.ItemId" data-item-name="@item.ItemName" data-item-price="@item.Price">
                        <i class="bi bi-cart-plus"></i> Order
                    </button>
                </div>
            </div>
        </div>
    </div>
}