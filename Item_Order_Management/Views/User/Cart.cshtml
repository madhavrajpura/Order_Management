        $(document).ready(function () {
            // Load navbar
            $.ajax({
                url: "/User/GetUserNavbarData",
                type: "GET",
                success: function (data) {
                    $("#Navbar").html(data);
                },
                error: function () {
                    console.error("Error loading navbar");
                }
            });

            loadCartItems();

            $(document).on("click", ".quantity-btn", function () {
                const inputTag = $(this).siblings(".quantity-input");
                let qty = parseInt(inputTag.val());
                if (isNaN(qty)) qty = 1; // Reset to 1 if invalid
                const cardTag = $(this).closest(".cart-item");
                const price = parseFloat(cardTag.data("price"));

                if ($(this).hasClass("plus")) {
                    if (price > 50000 && qty >= 2) {
                        callWarningToaster("Maximum quantity limit of 2 reached for items above ₹50,000!");
                        return;
                    } else if (price > 30000 && qty >= 5) {
                        callWarningToaster("Maximum quantity limit of 5 reached for items above ₹30,000!");
                        return;
                    }
                    qty += 1;
                } else {
                    qty = qty > 1 ? qty - 1 : 1;
                }

                inputTag.val(qty);
                updateTotalAmount();
            });

            $(document).on("click", ".remove-btn", function () {
                const cartId = $(this).data("cart-id");
                $.ajax({
                    url: "/User/RemoveFromCart",
                    type: "POST",
                    data: { cartId: cartId },
                    success: function (data) {
                        $("#cartItems").html(data);
                        updateTotalAmount();
                        console.log("Item removed successfully 1");
                        loadCartItems();
                        console.log("Item removed successfully 2");
                    },
                    error: function () {
                        callErrorToaster("Failed to remove item");
                    }
                });
            });
        });
    </script>
}