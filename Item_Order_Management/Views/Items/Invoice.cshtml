@model DataAccessLayer.ViewModels.OrderViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Order Invoice</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            @* padding: 30px; *@
            background: #f5f8fa;
            @* color: #333; *@
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            background: white;
            padding: 30px;
            box-shadow: 0 0 10px rgb(0 132 195 / 0.2);
            border-radius: 8px;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo-text {
            display: inline-block;
            font-size: 28px;
            font-weight: 700;
            color: #0084c3;
            vertical-align: middle;
            margin-left: 10px;
            letter-spacing: 2px;
        }

        .details-container {
            width: 100%;
            overflow: hidden;
        }

        .customer-details-box {
            width: 50%;
            float: left;
            box-sizing: border-box;
            padding-right: 20px;
        }

        .order-details-box {
            width: 50%;
            float: right;
            box-sizing: border-box;
            padding-left: 100px;
        }

        @* .details {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
            flex-wrap: wrap;
        } *@

        .box {
            width: 48%;
            min-width: 280px;
            box-sizing: border-box;
        }

        .box-title {
            font-size: 20px;
            font-weight: 700;
            color: #0084c3;
            margin-bottom: 10px;
            border-bottom: 2px solid #0084c3;
            padding-bottom: 5px;
        }

        .box-content span {
            display: block;
            font-size: 16px;
            margin-bottom: 8px;
        }

        table {
            width: 100%;
            margin-top: 30px;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        thead {
            background-color: #0084c3;
            color: white;
        }

        th,
        td {
            padding: 10px 12px;
            text-align: left;
        }

        th:last-child,
        td:last-child {
            text-align: left;
        }

        tbody tr {
            border-bottom: 1px solid #0084c3;
        }

        tbody tr:nth-child(even) {
            background-color: #f0f8ff;
        }

        .font-class {
            font-weight: 600;
            font-size: 18px;
            color: #555555;
            vertical-align: middle;
        }

        .item-image {
            height: 40px;
            margin-left: 10px;
            vertical-align: middle;
            border-radius: 4px;
        }

        .totals {
            max-width: 280px;
            margin-left: auto;
            font-size: 17px;
        }

        .totals div {
            display: flex;
            justify-content: space-between;
            padding: 6px 0;
            border-bottom: 1px solid #0084c3;
        }

        .totals div:last-child {
            border-bottom: none;
            font-weight: 700;
            font-size: 20px;
            color: #0084c3;
        }

        .thank-you {
            text-align: center;
            margin-top: 40px;
            font-size: 22px;
            font-weight: 700;
            color: #0084c3;
            letter-spacing: 1.5px;
        }
    </style>
</head>

<body>
    <div class="container">

        <!-- Header with logo -->
        <div class="header">
            <span class="logo-text">ITEM ORDER MANAGEMENT</span>
        </div>

        <!-- Customer & Order Details -->
        <div class="details-container">
            <div class="customer-details-box">
                <div class="box-title">Customer Details</div>
                <div class="box-content">
                    <span><strong>Name :</strong> @Model.CustomerName</span>
                    <span><strong>Email :</strong> @Model.Email</span>
                    <span><strong>Phone Number :</strong> @Model.PhoneNumber</span>
                    @if (Model.Address != null)
                    {
                        <span><strong>Address :</strong> @Model.Address</span>
                    }
                </div>
            </div>

            <div class="order-details-box">
                <div class="box-title">Order Summary</div>
                <div class="box-content">
                    <span><strong>Order ID :</strong> #@Model.OrderId</span>
                    <span><strong>Order Date :</strong> @Model.OrderDate.ToString("dd MMM yyyy")</span>
                    <span><strong>Delivery Date :</strong> @(Model.DeliveryDate.HasValue ?
                        Model.DeliveryDate.Value.ToString("dd MMM yyyy") : "N/A")</span>
                    <span><strong>Status :</strong> @(Model.IsDelivered ? "Delivered" : "Pending")</span>
                </div>
            </div>
        </div>

        <!-- Items Table -->
        <table>
            <thead>
                <tr>
                    <th>Sr. No.</th>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Sub Total</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int srNo = 1;
                    foreach (var item in Model.OrderItems)
                    {
                        var total = (item.Price * item.Quantity);
                        <tr>
                            <td class="font-class">@srNo</td>
                            <td class="font-class">
                                @* @if (!string.IsNullOrEmpty(item.ImageURL))
                        {
                        <img src="@item.ImageURL" alt="Item Image" class="item-image" />
                        } *@
                                @item.ItemName
                            </td>
                            <td class="font-class">@item.Quantity</td>
                            <td class="font-class">@item.Price.ToString("C")</td>
                            <td class="font-class">@total.ToString("C")</td>
                        </tr>
                        srNo++;
                    }
                }
            </tbody>
        </table>

        <!-- Totals -->
        <div class="totals">
            <div id="TotalAmount">
                <span>Total Amount :</span>
                <span>@Model.TotalAmount.ToString("C")</span>
            </div>
        </div>

        <div class="thank-you">THANK YOU FOR YOUR ORDER!</div>
    </div>
</body>

</html>
