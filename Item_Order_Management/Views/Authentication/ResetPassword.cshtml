@model DataAccessLayer.ViewModels.ResetPasswordViewModel;
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "_LoginLayout";
}

<div class="container-fluid"
    style="height:100vh; background-image: url('/images/backgroundImage.jpg'); background-size: cover; background-position: center;">

    <div class="login-main-div d-flex row align-content-center justify-content-center" style="height:100vh;">

        <!-- Start Reset Password Section -->
        <div class="container p-4 shadow-lg"
            style="width: 600px; border-radius: 3%; background-color: rgba(255, 255, 255, 0.521);">

            <!--Start Reset Password Text -->
            <div class="d-flex align-items-center justify-content-center mb-4">
                <h3 class="fw-bold custom-text-color fs-2">Reset Your Password here</h3>
            </div>
            <!--End Reset Password Text -->

            <!--Start Reset Password Form-->

            <form asp-action="ResetPassword" asp-controller="Authentication" class="p-sm-5 pt-sm-0">

                <input type="hidden" asp-for="Email" id="Email" />

                <!-- Name & Email -->

                <div class="form-row">
                    <div class="form-group col-md-12 pb-3">
                        <input asp-for="Password" class="form-control input d-inline" type="password" autocomplete="off"
                            id="resetPassword" style="width: 100% !important; height: 50px;" placeholder="Password*" />
                        <i class="bi bi-eye-slash-fill eye-button" id="resetTogglePassword"></i>
                        <div class="pe-5">
                            <span asp-validation-for="Password" class="text-size validation-color"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-12 pb-3">
                        <input asp-for="ConfirmPassword" class="form-control input d-inline" type="password"
                            autocomplete="off" id="resetConfirmPassword" style="width: 100% !important; height: 50px;"
                            placeholder="Confirm Password*" />
                        <i class="bi bi-eye-slash-fill eye-button" id="resetConfirmTogglePassword"></i>
                        <div class="pe-5">
                            <span asp-validation-for="ConfirmPassword" class="text-size validation-color"></span>
                        </div>
                    </div>
                </div>
                
                <!-- Form Submission -->

                <div class="d-grid form-group w-100">
                    <button type="submit" id="login-btn" class="btn solid-btn mt-3">Submit</button>
                </div>

                <!-- Back To Login -->

                <div class="d-flex justify-content-center pt-4">
                    <a asp-action="Login" class="custom-text-color fw-bold">Back to Login</a>
                </div>

            </form>
            <!--End Reset Password Form-->

        </div>
        <!-- End Reset Password Section -->

    </div>
</div>