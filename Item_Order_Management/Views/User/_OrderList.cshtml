@model DataAccessLayer.ViewModels.PaginationViewModel<DataAccessLayer.ViewModels.OrderViewModel>

<input type="hidden" id="totalRecords" value="@Model.TotalCount" />

@foreach (var order in Model.Items)
{
    <div class="col-12 col-md-6 col-lg-4">
        <div class="card order-card border-0 shadow-sm p-3">
            <div class="card-body">
                <h5 class="card-title fw-bold text-dark">Order #@order.OrderId</h5>
                <p class="card-text text-muted">Customer: @order.CustomerName</p>
                <p class="card-text text-muted">Item: @order.ItemName</p>
                <p class="card-text text-muted">Quantity: @order.Quantity</p>
                <p class="card-text text-muted">Amount: $@order.OrderAmount.ToString("F2")</p>
                <p class="card-text text-muted small">Order Date: @order.OrderDate.ToString("MMM dd, yyyy")</p>
                <p class="card-text text-muted small">Delivery Date: @order.DeliveryDate.ToString("MMM dd, yyyy")</p>
                <div class="d-flex gap-2 mt-3">
                    @{
                        var canEdit = (DateTime.UtcNow - order.OrderDate).TotalDays <= 2;
                    }
                    @if (canEdit)
                    {
                        <button class="btn btn-sm btn-outline-primary saveOrder" data-bs-toggle="modal" data-bs-target="#SaveOrderModal" data-id="@order.OrderId">
                            <i class="bi bi-pencil"></i> Edit
                        </button>
                    }
                    <button class="btn btn-sm btn-outline-danger deleteOrder" data-bs-toggle="modal" data-bs-target="#DeleteOrderModal" data-id="@order.OrderId">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}